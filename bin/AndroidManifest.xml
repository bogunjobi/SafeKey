<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.safekey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	
 <application
     	android:name="com.example.safekey.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        >
        
        <activity
            android:name="com.example.safekey.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.safekey.SettingsActivity"
            android:label="@string/title_activity_settings" 
            android:parentActivityName="com.example.safekey.Main" >
        <!-- Parent activity meta-data to support API level 7+ -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.safekey.Main" />
        </activity>
        <activity
            android:name="com.example.safekey.Main"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.safekey.Setup"
            android:label="@string/title_activity_setup" >
        </activity>
        <activity
            android:name="com.example.safekey.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.example.safekey.SplashScreen"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.safekey.SplashScreen" />
        </activity>
        
        
        <activity android:name="com.example.safekey.LockScreen"
            android:label="@string/activity_sample_device_admin">
    	<intent-filter>
        	<category android:name="android.intent.category.SAMPLE_CODE" />
    	</intent-filter>
		</activity>
        
        <receiver android:name=".app.DeviceAdminSample$DeviceAdminSampleReceiver"
        android:label="@string/sample_device_admin"
        android:description="@string/sample_device_admin_description"
        android:permission="android.permission.BIND_DEVICE_ADMIN">
    		<meta-data android:name="android.app.device_admin"
            android:resource="@xml/device_admin" />
    		<intent-filter>
        		<action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
    		</intent-filter>
		</receiver>
        
    </application>
	
    
    
</manifest>
