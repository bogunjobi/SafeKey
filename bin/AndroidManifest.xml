<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.safekey"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="com.example.safekey.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        >
        <activity
            android:name="com.example.safekey.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.safekey.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.safekey.Main" >

            <!-- Parent activity meta-data to support API level 7+ -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.safekey.Main" />
        </activity>
        <activity
            android:name="com.example.safekey.Main"
            android:label="@string/title_activity_main" 
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="com.example.safekey.Setup"
            android:label="@string/title_activity_setup" >
        </activity>
        <activity
            android:name="com.example.safekey.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="com.example.safekey.SplashScreen"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.safekey.SplashScreen" />
        </activity>
        <activity
            android:name="com.example.safekey.LockScreen"
            android:label="@string/title_activity_lock_screen"
            android:theme="@android:style/Theme.NoTitleBar" >
"
            <intent-filter>
                <action android:name="BluetoothDevice.ACTION_ACL_DISCONNECTED" />
;
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.safekey.ShowDialog" >
        </activity>

        <receiver
            android:name="com.example.safekey.MyAdmin"
            android:description="@string/sample_device_admin_description"
            android:label="@string/sample_device_admin"
            android:permission="android.permission.BIND_DEVICE_ADMIN" >
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.example.safekey.DADisabled"
            android:theme="@style/OverlayDialog" >
        </activity>

        <service android:name="com.example.safekey.BTConnection" />

        <receiver android:name="com.example.safekey.BTReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.example.safekey.ScreenListener">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT"/>
            </intent-filter>
        </receiver>
        <activity
            android:name="com.example.safekey.DriverTracking"
            android:label="@string/title_activity_driver_tracking" >
        </activity>
        
       
            
                
    </application>

</manifest>
